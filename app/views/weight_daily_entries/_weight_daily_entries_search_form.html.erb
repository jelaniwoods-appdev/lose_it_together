<%= search_form_for @q, :class => collapse_search_form, :id => "weight_daily_entries_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :recorded_date, "Recorded date" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='recorded_dategteqPicker' data-target-input="nearest">
          <%= f.text_field :recorded_date_gteq, :class => "form-control datetimepicker-input", :placeholder => "Recorded date greater than or equal to", :data => {:target => '#recorded_dategteqPicker'} %>
          <div class="input-group-append" data-target='#recorded_dategteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='recorded_datelteqPicker' data-target-input="nearest">
          <%= f.text_field :recorded_date_lteq, :class => "form-control datetimepicker-input", :placeholder => "Recorded date less than or equal to", :data => {:target => '#recorded_datelteqPicker'} %>
          <div class="input-group-append" data-target='#recorded_datelteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#recorded_dategteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#recorded_datelteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#recorded_dategteqPicker').on("dp.change", function (e) {
              $('#recorded_datelteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#recorded_datelteqPicker').on("dp.change", function (e) {
              $('#recorded_dategteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :weight_in_lb, "Weight in lb" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :weight_in_lb_gteq, :class => "form-control", :placeholder => "Weight in lb greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :weight_in_lb_lteq, :class => "form-control", :placeholder => "Weight in lb less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :created_at, "WeightTrackerProfile Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='weight_tracker_usergteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :weight_tracker_user_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "WeightTrackerProfile Created at greater than or equal to", :data => {:target => '#weight_tracker_usergteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#weight_tracker_usergteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='weight_tracker_userlteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :weight_tracker_user_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "WeightTrackerProfile Created at less than or equal to", :data => {:target => '#weight_tracker_userlteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#weight_tracker_userlteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#weight_tracker_usergteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#weight_tracker_userlteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#weight_tracker_usergteqcreated_atPicker').on("dp.change", function (e) {
              $('#weight_tracker_userlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#weight_tracker_userlteqcreated_atPicker').on("dp.change", function (e) {
              $('#weight_tracker_usergteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/weight_daily_entries" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>


<div class="card mb-3">
  <h2 class="card-header h4">
    Workout #<%= workout.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Workout date</dt>
      <!-- Display workout_date start -->
      <dd><%= workout.workout_date %></dd>
      <!-- Display workout_date end -->

      <dt>Weight tracker user</dt>
      <!-- Display weight_tracker_user_id start -->
      <dd>
        <% if @workout.weight_tracker_user.present? %>
          <%= link_to workout.weight_tracker_user, workout.weight_tracker_user %>
        <% end %>
      </dd>
      <!-- Display weight_tracker_user_id end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back workout, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link workout start -->
      <div class="col">
        <%= link_to edit_workout_url(workout), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link workout end -->

      <!-- Delete link workout start -->
      <div class="col">
        <%= link_to workout, method: :delete, data: { confirm: "Do you really want to delete this workout?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link workout end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(workout.updated_at) %> ago
  </div>
</div>

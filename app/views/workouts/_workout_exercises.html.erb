<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Exercises

    <a data-toggle="collapse" href="#workout_exercises_new_form">
      Add exercise
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @workout.exercises.each do |exercise| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to exercise, exercise %>

        <%= link_to exercise, method: :delete, data: { confirm: "Do you really want to delete this exercise" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="workout_exercises_new_form">
        <%= render partial: "workouts/workout_exercises_new_form" %>
      </div>
    </div>

  </ul>
</div>

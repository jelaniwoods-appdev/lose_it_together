<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Workout Comments

    <a data-toggle="collapse" href="#workout_workout_comments_new_form">
      Add workout comment
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @workout.workout_comments.each do |workout_comment| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to workout_comment, workout_comment %>

        <%= link_to workout_comment, method: :delete, data: { confirm: "Do you really want to delete this workout_comment" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="workout_workout_comments_new_form">
        <%= render partial: "workouts/workout_workout_comments_new_form" %>
      </div>
    </div>

  </ul>
</div>

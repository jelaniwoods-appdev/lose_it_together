<% was_validated = user_login.errors.any? %>

<%= form_with(model: user_login, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% username_class = "form-control" %>
    <% username_was_invalid = user_login.errors.include?(:username) %>

    <% if was_validated %>
      <% if username_was_invalid %>
        <% username_class << " is-invalid" %>
      <% else %>
        <% username_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :username %>
    <%= f.text_field :username, class: username_class, placeholder: "Enter username" %>
    <% if username_was_invalid %>
      <% user_login.errors.full_messages_for(:username).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% user_type_class = "form-control" %>
    <% user_type_was_invalid = user_login.errors.include?(:user_type) %>

    <% if was_validated %>
      <% if user_type_was_invalid %>
        <% user_type_class << " is-invalid" %>
      <% else %>
        <% user_type_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :user_type %>
    <%= f.select :user_type, options_for_select(UserLogin.user_types.keys), {}, class: "form-control" %>
    <% if user_type_was_invalid %>
      <% user_login.errors.full_messages_for(:user_type).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>

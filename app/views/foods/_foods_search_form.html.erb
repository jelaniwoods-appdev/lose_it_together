<%= search_form_for @q, :class => collapse_search_form, :id => "foods_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :calories_consumed, "Calories consumed" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :calories_consumed_gteq, :class => "form-control", :placeholder => "Calories consumed greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :calories_consumed_lteq, :class => "form-control", :placeholder => "Calories consumed less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :number_of_gram_consumed, "Number of gram consumed" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :number_of_gram_consumed_gteq, :class => "form-control", :placeholder => "Number of gram consumed greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :number_of_gram_consumed_lteq, :class => "form-control", :placeholder => "Number of gram consumed less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :food_name_cont, "Food name contains" %>
    <%= f.text_field :food_name_cont, :class => "form-control", :placeholder => "Food name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :created_at, "Meal Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='mealgteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :meal_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Meal Created at greater than or equal to", :data => {:target => '#mealgteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#mealgteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='meallteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :meal_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Meal Created at less than or equal to", :data => {:target => '#meallteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#meallteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#mealgteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#meallteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#mealgteqcreated_atPicker').on("dp.change", function (e) {
              $('#meallteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#meallteqcreated_atPicker').on("dp.change", function (e) {
              $('#mealgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :created_at, "WeightTrackerProfile Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='usergteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :user_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "WeightTrackerProfile Created at greater than or equal to", :data => {:target => '#usergteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#usergteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='userlteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :user_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "WeightTrackerProfile Created at less than or equal to", :data => {:target => '#userlteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#userlteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#usergteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#userlteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#usergteqcreated_atPicker').on("dp.change", function (e) {
              $('#userlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#userlteqcreated_atPicker').on("dp.change", function (e) {
              $('#usergteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/foods" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>


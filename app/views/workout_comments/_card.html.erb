<div class="card mb-3">
  <h2 class="card-header h4">
    Workout Comment #<%= workout_comment.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Workout</dt>
      <dd>
        <% if @workout_comment.workout.present? %>
          <%= link_to workout_comment.workout, workout_comment.workout %>
        <% end %>
      </dd>

      <dt>Commenter user</dt>
      <dd>
        <% if @workout_comment.user.present? %>
          <%= link_to workout_comment.user, workout_comment.user %>
        <% end %>
      </dd>

      <dt>Comment text</dt>
      <dd><%= workout_comment.comment_text %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back workout_comment, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_workout_comment_url(workout_comment), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to workout_comment, method: :delete, data: { confirm: "Do you really want to delete this workout_comment?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(workout_comment.updated_at) %> ago
  </div>
</div>

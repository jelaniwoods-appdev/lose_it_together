<%= search_form_for @q, :class => collapse_search_form, :id => "meals_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :date_and_time_of_meal, "Date and time of meal" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='date_and_time_of_mealgteqPicker' data-target-input="nearest">
          <%= f.text_field :date_and_time_of_meal_gteq, :class => "form-control datetimepicker-input", :placeholder => "Date and time of meal greater than or equal to", :data => {:target => '#date_and_time_of_mealgteqPicker'} %>
          <div class="input-group-append" data-target='#date_and_time_of_mealgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='date_and_time_of_meallteqPicker' data-target-input="nearest">
          <%= f.text_field :date_and_time_of_meal_lteq, :class => "form-control datetimepicker-input", :placeholder => "Date and time of meal less than or equal to", :data => {:target => '#date_and_time_of_meallteqPicker'} %>
          <div class="input-group-append" data-target='#date_and_time_of_meallteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#date_and_time_of_mealgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#date_and_time_of_meallteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#date_and_time_of_mealgteqPicker').on("dp.change", function (e) {
              $('#date_and_time_of_meallteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#date_and_time_of_meallteqPicker').on("dp.change", function (e) {
              $('#date_and_time_of_mealgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :created_at, "WeightTrackerProfile Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='calorie_tracker_usergteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :calorie_tracker_user_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "WeightTrackerProfile Created at greater than or equal to", :data => {:target => '#calorie_tracker_usergteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#calorie_tracker_usergteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='calorie_tracker_userlteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :calorie_tracker_user_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "WeightTrackerProfile Created at less than or equal to", :data => {:target => '#calorie_tracker_userlteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#calorie_tracker_userlteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#calorie_tracker_usergteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#calorie_tracker_userlteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#calorie_tracker_usergteqcreated_atPicker').on("dp.change", function (e) {
              $('#calorie_tracker_userlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#calorie_tracker_userlteqcreated_atPicker').on("dp.change", function (e) {
              $('#calorie_tracker_usergteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/meals" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>


<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Meal Comments

    <a data-toggle="collapse" href="#meal_meal_comments_new_form">
      Add meal comment
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @meal.meal_comments.each do |meal_comment| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to meal_comment, meal_comment %>

        <%= link_to meal_comment, method: :delete, data: { confirm: "Do you really want to delete this meal_comment" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="meal_meal_comments_new_form">
        <%= render partial: "meals/meal_meal_comments_new_form" %>
      </div>
    </div>

  </ul>
</div>

<% was_validated = weight_tracker_profile.errors.any? %>

<%= form_with(model: weight_tracker_profile, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% username_class = "form-control" %>
    <% username_was_invalid = weight_tracker_profile.errors.include?(:username) %>

    <% if was_validated %>
      <% if username_was_invalid %>
        <% username_class << " is-invalid" %>
      <% else %>
        <% username_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :username %>
    <%= f.text_field :username, class: username_class, placeholder: "Enter username" %>
    <% if username_was_invalid %>
      <% weight_tracker_profile.errors.full_messages_for(:username).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% target_daily_calory_class = "form-control" %>
    <% target_daily_calory_was_invalid = weight_tracker_profile.errors.include?(:target_daily_calory) %>

    <% if was_validated %>
      <% if target_daily_calory_was_invalid %>
        <% target_daily_calory_class << " is-invalid" %>
      <% else %>
        <% target_daily_calory_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :target_daily_calories %>
    <%= f.number_field :target_daily_calories, class: target_daily_calory_class, placeholder: "Enter target daily calory" %>
    <% if target_daily_calory_was_invalid %>
      <% weight_tracker_profile.errors.full_messages_for(:target_daily_calory).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% target_weight_in_lb_class = "form-control" %>
    <% target_weight_in_lb_was_invalid = weight_tracker_profile.errors.include?(:target_weight_in_lb) %>

    <% if was_validated %>
      <% if target_weight_in_lb_was_invalid %>
        <% target_weight_in_lb_class << " is-invalid" %>
      <% else %>
        <% target_weight_in_lb_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :target_weight_in_lb %>
    <%= f.number_field :target_weight_in_lb, class: target_weight_in_lb_class, placeholder: "Enter target weight in lb" %>
    <% if target_weight_in_lb_was_invalid %>
      <% weight_tracker_profile.errors.full_messages_for(:target_weight_in_lb).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% profile_pic_class = "form-control" %>
    <% profile_pic_was_invalid = weight_tracker_profile.errors.include?(:profile_pic) %>

    <% if was_validated %>
      <% if profile_pic_was_invalid %>
        <% profile_pic_class << " is-invalid" %>
      <% else %>
        <% profile_pic_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :profile_pic %>
    <%= f.file_field :profile_pic, class: "form-control" %>
    <% if profile_pic_was_invalid %>
      <% weight_tracker_profile.errors.full_messages_for(:profile_pic).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% associated_personal_trainer_class = "form-control" %>
    <% associated_personal_trainer_was_invalid = weight_tracker_profile.errors.include?(:associated_personal_trainer) %>

    <% if was_validated %>
      <% if associated_personal_trainer_was_invalid %>
        <% associated_personal_trainer_class << " is-invalid" %>
      <% else %>
        <% associated_personal_trainer_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :associated_personal_trainer_id %>
    <%= f.collection_select :associated_personal_trainer_id, PersonalTrainerProfile.all, :id, :to_s, {}, class: "form-control" %>
    <% if associated_personal_trainer_was_invalid %>
      <% weight_tracker_profile.errors.full_messages_for(:associated_personal_trainer).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% associated_nutritionist_class = "form-control" %>
    <% associated_nutritionist_was_invalid = weight_tracker_profile.errors.include?(:associated_nutritionist) %>

    <% if was_validated %>
      <% if associated_nutritionist_was_invalid %>
        <% associated_nutritionist_class << " is-invalid" %>
      <% else %>
        <% associated_nutritionist_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :associated_nutritionist_id %>
    <%= f.collection_select :associated_nutritionist_id, NutritionistProfile.all, :id, :to_s, {}, class: "form-control" %>
    <% if associated_nutritionist_was_invalid %>
      <% weight_tracker_profile.errors.full_messages_for(:associated_nutritionist).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.hidden_field :login_id, value: current_user_login.id %>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>

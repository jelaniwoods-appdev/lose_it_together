<div class="card mb-3">
  <h2 class="card-header h4">
    Personal Trainer Profile #<%= personal_trainer_profile.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Rating</dt>
      <dd><%= personal_trainer_profile.rating %></dd>

      <dt>Login</dt>
      <dd>
        <% if @personal_trainer_profile.login.present? %>
          <%= link_to personal_trainer_profile.login, personal_trainer_profile.login %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back personal_trainer_profile, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_personal_trainer_profile_url(personal_trainer_profile), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to personal_trainer_profile, method: :delete, data: { confirm: "Do you really want to delete this personal_trainer_profile?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(personal_trainer_profile.updated_at) %> ago
  </div>
</div>

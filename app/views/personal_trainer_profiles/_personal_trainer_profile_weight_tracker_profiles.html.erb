<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Weight Tracker Profiles

    <a data-toggle="collapse" href="#personal_trainer_profile_weight_tracker_profiles_new_form">
      Add weight tracker profile
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @personal_trainer_profile.weight_tracker_profiles.each do |weight_tracker_profile| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to weight_tracker_profile, weight_tracker_profile %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <% if current_user_login == weight_tracker_profile.login %>
          <%= link_to weight_tracker_profile, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="personal_trainer_profile_weight_tracker_profiles_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "personal_trainer_profiles/personal_trainer_profile_weight_tracker_profiles_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>

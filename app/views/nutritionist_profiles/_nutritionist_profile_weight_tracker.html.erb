<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Weight Tracker

    <a data-toggle="collapse" href="#nutritionist_profile_weight_tracker_new_form">
      Add weight tracker profile
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @nutritionist_profile.weight_tracker.each do |weight_tracker_profile| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to weight_tracker_profile, weight_tracker_profile %>

        <% if current_user_login == weight_tracker_profile.login %>
          <%= link_to weight_tracker_profile, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="nutritionist_profile_weight_tracker_new_form">
        <%= render partial: "nutritionist_profiles/nutritionist_profile_weight_tracker_new_form" %>
      </div>
    </div>

  </ul>
</div>
